<section class="genre-rows container {{ theme_var('grid-size') }}">
  {% if page.header.headline %}<h2 class="center">{{ page.header.headline }}</h2>{% endif %}
	{% for row in page.header.rows %}
		<div class="columns{% if row.img_col_right %} img-column-right{% endif %}{% if page.header.vertical_center %} vertical-center{% endif %}">
			<div class="{% if row.class %}{{ row.class }} {% endif %}image-column column col-{{ row.img_col_width|default('4') }} col-md-12">
				{% for image in row.images %}
					<img 
						{% if image.id %}id="{{ image.id }}" {% endif %}
						class="rellax-image" 
						src="{{ url('theme://images/genres') }}/{{ image.src }}" 
						alt="{{ image.alt_text }}"
						data-rellax-speed="{{ image.parallax_speed|default('-2') }}"
					>
				{% endfor %}
			</div>
			<div class="text-column column col-md-12">
				{{ row.text|markdown }}
			</div>
		</div>
	{% endfor %}
</section>
