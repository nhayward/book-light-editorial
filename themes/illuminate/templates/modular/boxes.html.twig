{% block body %}
	{% embed 'partials/layout.html.twig' %}
		{% block item %}

			<div class="bricklayer">
				{% for box in page.header.boxes %}
					<div class="box {% if box.package %}package{% endif %}" style="background-image: url({{ url('theme://images/accents/Book_Light_Editorial_catonbook.png') }})">
                        <div class="box-heading">
                            <h2>{{ box.heading }}</h2>
                        </div>
                        <div class="box-content">
						    {{ box.content|markdown }}
                        </div>
					</div>
				{% endfor %}
			</div>

		{% endblock %}

	{% endembed %}

	<script>
		// Bricklayer
		var bricklayer = new Bricklayer(document.querySelector('.bricklayer'))
	</script>

{% endblock %}
